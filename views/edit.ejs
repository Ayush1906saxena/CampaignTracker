            <div class="container-xxl flex-grow-1 container-p-y">
                <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Edit Project</h4>

                <!-- Basic Layout & Basic with Icons -->
                <div class="row">
                  <!-- Basic Layout -->
                  <div class="col-xxl">
                    <div class="card mb-4">
                      <div class="card-header d-flex align-items-center justify-content-between">
                      </div>
                      <div class="card-body">
                        <form action="/project/campaign/project/update/<%= project_id %>" method="POST">
                          <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-name">Name</label>
                            <div class="col-sm-10">
                              <input type="text" class="form-control" id="projectName" name="projectName" placeholder="" value="<%= project.projectName%>"/>
                            </div>
                          </div>
                          <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-email">Deadline</label>
                            <div class="col-sm-10">
                              <div class="input-group input-group-merge">
                                <input
                                  type="text"
                                  id="projectDeadline"
                                  name="projectDeadline"
                                  class="form-control"
                                  placeholder="enter 2m for 2 months, 3y for 3 years, etc"
                                  value="<%= project.projectDeadline%>"
                                />
                              </div>
                            </div>
                          </div>
                          <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-email">Location</label>
                            <div class="col-sm-10">
                              <div class="input-group input-group-merge">
                                <input
                                  type="text"
                                  id="location"
                                  name="location"
                                  class="form-control"
                                  placeholder=""
                                  value="<%= project.location%>"
                                />
                              </div>
                            </div>
                          </div>
                          <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-email">Financial Year</label>
                            <div class="col-sm-10">
                              <div class="input-group input-group-merge">
                                <input
                                  type="text"
                                  id="financialYear"
                                  name="financialYear"
                                  class="form-control"
                                  placeholder=""
                                  value="<%= project.financialYear%>"
                                />
                              </div>
                            </div>
                          </div>
                          <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-email">Funds Disbursed</label>
                            <div class="col-sm-10">
                              <div class="input-group input-group-merge">
                                <input
                                  type="text"
                                  id="fundsDisbursed"
                                  name="fundsDisbursed"
                                  class="form-control"
                                  placeholder=""
                                  value="<%= project.fundsDisbursed%>"
                                />
                              </div>
                            </div>
                          </div>
                          <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-email">Funds Utilized</label>
                            <div class="col-sm-10">
                              <div class="input-group input-group-merge">
                                <input
                                  type="text"
                                  id="fundsUtilized"
                                  name="fundsUtilized"
                                  class="form-control"
                                  placeholder=""
                                  value="<%= project.fundsUtilized%>"
                                />
                              </div>
                            </div>
                          </div>
                          <div class="mb-3 col-md-6">
                            <label for="employees" class="form-label">Donor:</label>
                            <select id="projectDonor" name="projectDonor" class="select2 form-select">
                              <option value="" disabled>Select Donor</option>
                              <% employees.forEach(function(employee) { %>
                              <option value="<%= employee._id %>"><%= employee.name %></option>
                              <% }); %>
                            </select>
                          </div>
                          <div class="row justify-content-end">
